{
  "name": "eclipse",
  "version": "1.0.0",
  "description": "Eclipse is a discord bot containing small WoW-related utilities",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "tsc && tsc-alias && node ./dist/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RaulinN/eclipse"
  },
  "author": "Nicolas Raulin",
  "license": "ISC",
  "include": [
    "./src/**/*.ts",
    "./test/**/*.test.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    ".idea/**/*",
    "./dist/**/*"
  ],
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "jest": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "^29.1.0",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "resolver": "jest-ts-webcompat-resolver",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/"
    ],
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "@model/(.*)": "<rootDir>/src/model/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
