{
  "name": "equinox",
  "version": "1.0.0",
  "description": "Equinox is a discord bot containing small WoW-related utilities",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "npm run clean && npm run build && node --experimental-json-modules ./dist/src/index.js",
    "dev": "nodemon -e ts --exec \"npm run build\"",
    "clean": "rm -rf ./dist/",
    "docs": "typedoc --options typedoc.json",
    "test": "jest --verbose --coverage --collectCoverageFrom=\"./src/**\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RaulinN/equinox"
  },
  "author": "Nicolas Raulin",
  "license": "ISC",
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*.test.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    ".idea/**/*",
    "./dist/**/*"
  ],
  "dependencies": {
    "axios": "^1.4.0",
    "discord-api-types": "^0.37.42",
    "discord.js": "^14.11.0",
    "dotenv": "^16.0.3",
    "mongoose": "^7.4.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@mxssfd/typedoc-theme": "^1.1.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "jest": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "^29.1.0",
    "tsc-alias": "^1.8.6",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "resolver": "jest-ts-webcompat-resolver",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "./node_modules/"
    ],
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "@model/(.*)": "<rootDir>/src/model/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
